pipeline {
    agent any
    
    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    bat 'npm install'
                }
            }
        }
        stage('Run Tests') {
            steps {
                script {
                    bat 'npm test'
                }
            }
        }
        stage ('Build Image'){
            steps {
                script {
                    dockerapp = docker.build("app/nodeapp:${env.BUILD_ID}", '-f ./Dockerfile .')
                }
            }
        }
        // stage('Push Image'){
        //     steps{
        //         script{
        //             docker.withRegistry('https://index.docker.io/v1/', 'dockerhub') {
        //                 dockerapp.push('latest')
        //                 dockerapp.push("${env.BUILD_ID}")
        //             }
        //         }
        //     }
        }
    }
}